<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header class="ps_header">
		<p class="post_show_date"><%= @project.created_at.strftime("%A, %b %d") %></p>
		<h1 class="psh"><a href="#"><%= @project.title %></a></h1>
		<hr class="post_hr">
	</header>
	<div id="content">
			
			<p><%= markdown @project.description %>
		<br>
		<br>

		<div class="button_wrapper">
		<a href="<%= @project.link%>" class="project_button" target="_blank">Visit <%= @project.title %></a>
		</div>
		<hr>
		<%= link_to "Edit Project",edit_project_path(@project), class: "button" %>

		<%= link_to "Delete ",project_path(@project),method: :delete, data: {confirm: "Are you sure you want to delete this Project?"} ,class: "button"  %>
	</div>
	<hr>			
</div>

